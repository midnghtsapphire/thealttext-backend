###############################################################################
# TheAltText Backend — Environment Variables
# Copy this file to .env and fill in your values.
# A GlowStarLabs product by Audrey Evans
# https://meetaudreyevans.com
###############################################################################

# ── Application ───────────────────────────────────────────────────────────
APP_NAME=TheAltText
APP_VERSION=2.0.0
ENVIRONMENT=development
DEBUG=false

# ── Database (PostgreSQL 16) ──────────────────────────────────────────────
POSTGRES_DB=thealttext
POSTGRES_USER=thealttext
POSTGRES_PASSWORD=changeme_in_production
DATABASE_URL=postgresql+asyncpg://thealttext:changeme_in_production@db:5432/thealttext

# ── Security ──────────────────────────────────────────────────────────────
SECRET_KEY=generate-a-strong-random-secret-key-here

# ── OpenRouter AI (Vision Models) ─────────────────────────────────────────
# Get your key at https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your-key-here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1
VISION_MODELS_FREE=google/gemini-2.0-flash-exp:free,meta-llama/llama-4-maverick:free
VISION_MODELS_PAID=google/gemini-2.5-flash,openai/gpt-4.1-mini

# ── Stripe Dual-Mode Billing ─────────────────────────────────────────────
# Toggle between test and live mode
STRIPE_MODE=test

# Test mode keys (https://dashboard.stripe.com/test/apikeys)
STRIPE_TEST_SECRET_KEY=sk_test_your-test-secret-key
STRIPE_TEST_PUBLISHABLE_KEY=pk_test_your-test-publishable-key
STRIPE_TEST_WEBHOOK_SECRET=whsec_your-test-webhook-secret
STRIPE_TEST_PRO_PRICE_ID=price_test_your-pro-price-id
STRIPE_TEST_ENTERPRISE_PRICE_ID=price_test_your-enterprise-price-id

# Live mode keys (https://dashboard.stripe.com/apikeys)
STRIPE_LIVE_SECRET_KEY=sk_live_your-live-secret-key
STRIPE_LIVE_PUBLISHABLE_KEY=pk_live_your-live-publishable-key
STRIPE_LIVE_WEBHOOK_SECRET=whsec_your-live-webhook-secret
STRIPE_LIVE_PRO_PRICE_ID=price_live_your-pro-price-id
STRIPE_LIVE_ENTERPRISE_PRICE_ID=price_live_your-enterprise-price-id

# ── CORS ──────────────────────────────────────────────────────────────────
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ── Redis (for Celery task queue) ─────────────────────────────────────────
REDIS_URL=redis://redis:6379/0

# ── Rate Limits ───────────────────────────────────────────────────────────
FREE_TIER_MONTHLY_LIMIT=50
PRO_TIER_MONTHLY_LIMIT=-1

# ── File Upload ───────────────────────────────────────────────────────────
MAX_UPLOAD_SIZE_MB=50

# ── Carbon Tracking ──────────────────────────────────────────────────────
CARBON_TRACKING_ENABLED=true

# ── Blue Ocean: Bulk Processing ──────────────────────────────────────────
BULK_MAX_IMAGES=100
BULK_CONCURRENT_WORKERS=5

# ── Blue Ocean: E-commerce SEO ───────────────────────────────────────────
ECOMMERCE_MODE_ENABLED=true
SEO_KEYWORD_BOOST=true

# ── Blue Ocean: Multi-Language ───────────────────────────────────────────
SUPPORTED_LANGUAGES=en,es,fr,de,ja,ko,zh,ar,pt,it,nl,ru,hi,haw
AUTO_DETECT_LOCALE=true

# ── Blue Ocean: Webhooks ─────────────────────────────────────────────────
WEBHOOK_ENABLED=true
WEBHOOK_MAX_RETRIES=3
WEBHOOK_TIMEOUT_SECONDS=10

# ── Blue Ocean: Competitor Comparison ────────────────────────────────────
COMPETITOR_COMPARISON_ENABLED=true
